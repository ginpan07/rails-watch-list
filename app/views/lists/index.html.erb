<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid h-30">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTwc7ydFE1mQgADVYt1kGx89OfZYArFccguWg&usqp=CAU" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "My List", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "New List", "#", class: "nav-link" %>
          </li>
      </ul>
    </div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://pyxis.nymag.com/v1/imgs/978/4d0/4b4779e1dcb86984abe55c08366f9babe7-13-empty-theater.rhorizontal.w700.jpg);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>


<div class="container mt-5 bd-highlight mb-3">
  <div class="d-flex justify-content-between">
    <h2>My List</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary mb-3"%>
  </div>

  <div class="cards d-flex flex-wrap">
    <% @lists.each do |list|%>
      <div class="card-category" style="width: 18rem;" >
        <%# <img src="..." class="card-img-top" alt="..."> %>
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>


</div>
